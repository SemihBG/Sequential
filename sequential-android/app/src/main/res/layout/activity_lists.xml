<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ListActivity">

    <Button
        android:id="@+id/downloadedListsButton"
        android:layout_width="168dp"
        android:layout_height="43dp"
        android:layout_marginTop="16dp"
        android:text="Downloaded"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/lists"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/allListsButton"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/allListsButton"
        android:layout_width="168dp"
        android:layout_height="43dp"
        android:layout_marginTop="16dp"
        android:text="All"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/lists"
        app:layout_constraintEnd_toStartOf="@+id/downloadedListsButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="333dp"
        android:layout_height="574dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>